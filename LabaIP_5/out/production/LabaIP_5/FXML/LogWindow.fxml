         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Button>
      <Button fx:id="Ready" layoutX="492.0" layoutY="283.0" mnemonicParsing="false" onAction="#ReadyButton" prefHeight="55.0" prefWidth="85.0" style="-fx-background-color: BLACK;" text="Готово" textFill="#0bdc16">
         <font>
            <Font name="System Bold" size="17.0" />
