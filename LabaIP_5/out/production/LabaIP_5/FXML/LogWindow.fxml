<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LogWindowController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0">
