      <Rectangle arcHeight="5.0" arcWidth="5.0" height="75.0" layoutX="168.0" layoutY="29.0" stroke="BLACK" strokeType="INSIDE" width="272.0" />
      <Label layoutX="260.0" layoutY="43.0" text="Вход" textFill="#4bc439">
